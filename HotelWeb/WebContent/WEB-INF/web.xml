<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>HotelWeb</display-name>
  <servlet>
    <servlet-name>RegistrationJsp</servlet-name>
    <jsp-file>/view/pages/registration.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationJsp</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AuthorizationJsp</servlet-name>
    <jsp-file>/view/pages/authorization.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthorizationJsp</servlet-name>
    <url-pattern>/authorization</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AfterReqRedirect</servlet-name>
    <jsp-file>/view/pages/tnxForRequest.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AfterReqRedirect</servlet-name>
    <url-pattern>/client/redirect</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MealAdd</servlet-name>
    <jsp-file>/view/pages/admin/mealAdd.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>MealAdd</servlet-name>
    <url-pattern>/admin/mealAdd</url-pattern>
  </servlet-mapping>
</web-app>